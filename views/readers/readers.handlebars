    <!-- My Books Section -->
    <section id="myBooks" class="myBooks bg-primary text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="section-heading">My Books</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Current Page</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each books}}
                                <tr>
                                    <td> {{this.title}} </td>
                                    <td> {{this.author}} </td>
                                    <td> {{this.current_page}} </td>
                                </tr>
                            {{/each}}

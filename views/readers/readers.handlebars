                            </tr> -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- My Progres Section -->
    <section id="myProgress" class="myProgress text-center">
    <!-- <section id="download" class="download bg-primary text-center"> -->
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <h2 class="section-heading">My Progress</h2>
                    
                    <form>
                        <select name="period">
                            <option value="1">Current Week</option>
                            <option value="2">Previous Week</option>
                            <option value="3">Last 30 days</option>
                            <option value="4">Last 90 days</option>
                        </select>
                        <input type="submit" name="report" value="Go">
                    </form>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Title</th>
                                <th>Time (minutes)</th>
                            </tr>
                        </thead>

                        <tbody>

                            {{#each logs}}
                                <tr>
                                    <td> {{this.log_created}} </td>
                                    <td> {{this.title}} </td>
                                    <td> {{this.time_lapsed}} </td>
                                </tr>  
                            {{/each}}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td> </td>
                                <td>Total Minutes:</td>
                                <td> {{sum}} </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>


